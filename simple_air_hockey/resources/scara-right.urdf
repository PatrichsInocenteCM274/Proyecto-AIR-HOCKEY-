<?xml version="1.0"?>
<robot name="scara-right">

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>           

  <material name="gris">
    <color rgba="0.8 0.8 0.702 1"/>
  </material>       

  <material name="blue">
    <color rgba="0.2745 0.5098 0.7059 1"/>
  </material>


  <link name="base_robot">
    <visual>
        <geometry>
            <box size="1.5 0.8 0.1"/>
        </geometry>
    </visual>
    <collision>
        <geometry>
            <box size="1.5 0.8 0.1"/>
        </geometry>
    </collision>
    <inertial>
        <mass value="20"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial> 
  </link>

  <link name="arm_1">
    <visual>
        <geometry>
            <box size="0.4 3.0 0.1"/>
        </geometry>
        <origin xyz="0 -1.5 0.1 " rpy="0 0 0"/>
        <material name="gris"/>
    </visual>
    <collision>
        <geometry>
            <box size="0.4 3.0 0.1"/>
        </geometry>
        <origin xyz="0 -1.5 0.1 " rpy="0 0 0"/>
        <material name="black"/>
    </collision>
    <inertial>
        <mass value="10"/>
        <inertia ixx="1.0" ixy="1.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial> 
  </link>

  
  <link name="start_arm_1">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.35"/>
      </geometry>
      <origin xyz="0 0.0 0.1 " rpy="0 0 1.57075"/>
      <material name="gris"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.35"/>
      </geometry>
      <origin xyz="0 0.0 0.1  " rpy="0 0 1.57075"/>
    </collision>
    <inertial> 
        <mass value="10"/>
        <inertia ixx="0.2" ixy="0" ixz="0" iyy="0.2" iyz="0.0" izz="0.2"/>
    </inertial>
  </link>
  


  <link name="end_arm_1">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.35"/>
      </geometry>
      <origin xyz="0 -2.9 0.1 " rpy="0 0 1.57075"/>
      <material name="gris"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.35"/>
      </geometry>
      <origin xyz="0 -2.9 0.1  " rpy="0 0 1.57075"/>
    </collision>
    <inertial> 
        <mass value="10"/>
        <inertia ixx="0.2" ixy="0" ixz="0" iyy="0.2" iyz="0.0" izz="0.2"/>
    </inertial>
  </link>
  

  <link name="arm_2">
    <visual>
        <geometry>
            <box size="0.4 2.2 0.1"/>
        </geometry>
        <origin xyz="0 -1 0 " rpy="0 0 0"/>
        <material name="blue"/>
    </visual>
    <collision>
        <geometry>
            <box size="0.4 2.2 0.1"/>
        </geometry>
        <origin xyz="0 -1 0 " rpy="0 0 0"/>
    </collision>
    <inertial>
        <mass value="10"/>
        <inertia ixx="1.0" ixy="1.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial> 
  </link>
  
  <link name="start_arm_2">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.35"/>
      </geometry>
      <origin xyz="0 0.0 0.0 " rpy="0 0 1.57075"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.35"/>
      </geometry>
      <origin xyz="0 0.0 0.0  " rpy="0 0 1.57075"/>
    </collision>
    <inertial> 
        <mass value="10"/>
        <inertia ixx="0.2" ixy="0" ixz="0" iyy="0.2" iyz="0.0" izz="0.2"/>
    </inertial>
  </link>

  <link name="end_arm_2">
    <visual>
      <geometry>
        <cylinder length="0.4" radius="0.35"/>
      </geometry>
      <origin xyz="0 -2.15 -0.15 " rpy="0 0 1.57075"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.4" radius="0.35"/>
      </geometry>
      <origin xyz="0 -2.15 -0.15  " rpy="0 0 1.57075"/>
    </collision>
    <inertial> 
        <mass value="10"/>
        <inertia ixx="0.2" ixy="0" ixz="0" iyy="0.2" iyz="0.0" izz="0.2"/>
    </inertial>
  </link>
  

  <link name="mallet">
    <visual>
      <geometry>
        <cylinder length="0.17" radius="0.45"/>
      </geometry>
      <origin xyz="0 -2.15 -0.40 " rpy="0 0 1.57075"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.17" radius="0.45"/>
      </geometry>
      <origin xyz="0 -2.15 -0.40  " rpy="0 0 1.57075"/>
    </collision>
    <inertial> 
        <mass value="30"/>
        <inertia ixx="0.2" ixy="0" ixz="0" iyy="0.2" iyz="0.0" izz="0.2"/>
    </inertial>
    <contact> 
            <lateral_friction value="0"/>
            <restitution value="0.5" />
    </contact>
  </link>

    <joint name="base_to_arm_1" type="revolute">
      <parent link="base_robot"/>
      <child link="arm_1"/>
      <axis xyz="0 0 1"/>
      <origin xyz="0.0 0.0 0.0"/> # Ubicacion del pivote
      <dynamics damping="1.0"/>
      <limit effort="100" lower="-3.14" upper="3.14.0" velocity="100"/>
  </joint>

  <joint name="arm1_to_arm_2" type="revolute">
      <parent link="arm_1"/>
      <child link="arm_2"/>
      <axis xyz="0 0 1"/>
      <origin xyz="0.0 -2.9 -0.02"/>
      <dynamics damping="1.0"/>
      <limit effort="100" lower="-3.14" upper="3.14.0" velocity="100"/>
  </joint>
  
  <joint name="arm_1_to_start_arm_1" type="fixed">
      <parent link="arm_1"/>
      <child link="start_arm_1"/>
      <axis xyz="0 0 1"/>
      <origin xyz="0.0 0.0 0.0"/>
  </joint>

  <joint name="arm_1_to_end_arm_1" type="fixed">
      <parent link="arm_1"/>
      <child link="end_arm_1"/>
      <axis xyz="0 0 1"/>
      <origin xyz="0.0 0.0 0.0"/>
  </joint>

  
  <joint name="arm_2_to_start_arm_2" type="fixed">
      <parent link="arm_2"/>
      <child link="start_arm_2"/>
      <axis xyz="0 0 1"/>
      <origin xyz="0.0 0.0 0.0"/>
  </joint>

  <joint name="arm_2_to_end_arm_2" type="fixed">
      <parent link="arm_2"/>
      <child link="end_arm_2"/>
      <axis xyz="0 0 1"/>
      <origin xyz="0.0 0.0 0.0"/>
  </joint>
  

   <joint name="arm_2_to_mallet" type="fixed">
      <parent link="arm_2"/>
      <child link="mallet"/>
      <axis xyz="0 0 1"/>
      <origin xyz="0.0 0.0 0.0"/>
  </joint>


</robot>